{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://cdn.digitallinguistics.org/schemas/location-1.1.0.json#",
  "title": "Location",
  "description": "A location, optionally with accompanying geographic coordinate data. Each location should also be a valid GeoJSON geometry object.",
  "required": [
    "name"
  ],

  "allOf": [

    {
      "title": "GeoJSON Geometry Object",
      "$ref": "http://json.schemastore.org/geojson#"
    },

    {
      "properties": {

        "abbreviation": {
          "title": "Abbreviation",
          "description": "An abbreviation for this location.",
          "$ref": "https://cdn.digitallinguistics.org/schemas/abbreviation-latest.json#"
        },

        "access": {
          "title": "Access Rights",
          "description": "Since locations sometimes contain personal information like addresses, it is important to consider the proper access management policy for them.",
          "$ref": "https://cdn.digitallinguistics.org/schemas/access-latest.json#"
        },

        "address": {
          "title": "Address",
          "$ref": "https://cdn.digitallinguistics.org/schemas/address-latest.json#"
        },

        "dateCreated": {
          "title": "Date Created",
          "$ref": "https://cdn.digitallinguistics.org/schemas/dateCreated-latest.json#"
        },

        "dateModified": {
          "title": "Date Modified",
          "$ref": "https://cdn.digitallinguistics.org/schemas/dateModified-latest.json#"
        },

        "name": {
          "title": "Name",
          "description": "A name for this location, e.g. `Susan's House` or `Valley High School`, or `Shenandoah River`.",
          "$ref": "https://cdn.digitallinguistics.org/schemas/multiLangString-latest.json#"
        },

        "notes": {
          "title": "Notes",
          "type": "array",
          "description": "A collection of notes about this location.",
          "uniqueItems": true,
          "items": {
            "title": "Note",
            "$ref": "https://cdn.digitallinguistics.org/schemas/note-latest.json#"
          }
        },

        "references": {
          "title": "Bibliographic References",
          "type": "array",
          "description": "A collection of bibliographic references about this location.",
          "uniqueItems": true,
          "items": {
            "title": "Reference",
            "$ref": "https://cdn.digitallinguistics.org/schemas/reference-latest.json#"
          }
        },

        "tags": {
          "title": "Tags",
          "$ref": "https://cdn.digitallinguistics.org/schemas/tags-latest.json#"
        },

        "url": {
          "title": "URL",
          "description": "The URL where information about this location can be retrieved.",
          "$ref": "https://cdn.digitallinguistics.org/schemas/url-latest.json#"
        }

      }
    }

  ]
}
