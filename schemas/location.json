{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://digitallinguistics.blob.core.windows.net/schemas/location-1.1.0.json#",
  "title": "Location",
  "description": "A location, optionally with accompanying geographic coordinate data. Each location should also be a valid GeoJSON geometry object.",
  "required": [
    "name"
  ],

  "allOf": [

    {
      "title": "GeoJSON Geometry Object",
      "$ref": "https://raw.githubusercontent.com/dwhieb/geojson-schema/master/geojson-schema.json#/definitions/geometry"
    },

    {
      "properties": {

        "abbreviation": {
          "title": "Abbreviation",
          "description": "An abbreviation for this location.",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/abbreviation#"
        },

        "access": {
          "title": "Access Rights",
          "description": "Since locations sometimes contain personal information like addresses, it is important to consider the proper access management policy for them.",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/access#"
        },

        "address": {
          "title": "Address",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/address#"
        },

        "dateCreated": {
          "title": "Date Created",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/dateCreated#"
        },

        "dateModified": {
          "title": "Date Modified",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/dateModified#"
        },

        "name": {
          "title": "Name",
          "description": "A name for this location, e.g. `Susan's House` or `Valley High School`, or `Shenandoah River`.",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/multiLangString#"
        },

        "notes": {
          "title": "Notes",
          "type": "array",
          "description": "A collection of notes about this location.",
          "uniqueItems": true,
          "items": {
            "title": "Note",
            "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/note#"
          }
        },

        "references": {
          "title": "Bibliographic References",
          "type": "array",
          "description": "A collection of bibliographic references about this location.",
          "uniqueItems": true,
          "items": {
            "title": "Reference",
            "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/reference#"
          }
        },

        "tags": {
          "title": "Tags",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/tags#"
        },

        "url": {
          "title": "URL",
          "description": "The URL where information about this location can be retrieved.",
          "$ref": "https://digitallinguistics.blob.core.windows.net/schemas/url#"
        }

      }
    }

  ]
}
