{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://spec.digitallinguistics.org/schemas/text#",

  "title": "Text",
  "type": "object",

  "description": "The Text is the fundamental unit of documentation. It represents a linguistic performance of a stretch of discourse in context. This may include a wide variety of linguistic genres: an elicitation session, a conversation, a narrative, a song, etc.",

  "required": [
    "phrases",
    "title"
  ],

  "additionalProperties": true,

  "properties": {

    "title": {
      "title": "Title",
      "type": "object"
    },

    "abbrev": {
      "title": "Abbreviation",
      "type": "string"
    },

    "url": {
      "title": "URL",
      "type": "string",
      "format": "uri"
    },

    "participants": {
      "title": "Participants",
      "type": "array"
    },

    "access": {
      "title": "Access Rights",
      "$ref": "http://spec.digitallinguistics.org/schemas/access#"
    },

    "discourseType": {
      "title": "Discourse Type",
      "type": "string"
    },

    "genre": {
      "title": "Genre",
      "type": "string"
    },

    "location": {
      "title": "Location",
      "$ref": "http://spec.digitallinguistics.org/schemas/location#"
    },

    "notes": {
      "title": "Notes",
      "$ref": "http://spec.digitallinguistics.org/schemas/notes#"
    },

    "dateCreated": {
      "title": "Date Created",
      "type": "string",
      "format": "date-time"
    },

    "dateModified": {
      "title": "Date Modified",
      "type": "string",
      "format": "date-time"
    },

    "dateRecorded": {
      "title": "Date Recorded",
      "type": "string",
      "format": "date-time"
    },

    "media": {
      "title": "Media",
      "type": "array"
    },

    "tags": {
      "title": "Tags",
      "$ref": "http://spec.digitallinguistics.org/schemas/tags#"
    },

    "phrases": {
      "title": "Phrases",
      "type": "array"
    }

  }

}
